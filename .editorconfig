root = true

[*]
charset = utf-8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single
curly_bracket_next_line = false
end_of_line = lf
# max_line_length нужно чтобы не разбивались длинные инлайн стрелочные функции (по умолчанию 80)
max_line_length = 120
indent_size = 2

[{*.json,*.yml}]
indent_style = space
indent_size = 2

[*.svg]
insert_final_newline = false